{% schema %}
  {
    "blocks": [
      
      {
        "type": "image_link_with_text",
        "name": "Image Linked with text",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": {
              "en": "Image",
              "es": "La Imagen Pues"
            }
          },
          {
            "type": "select",
            "id": "layout",
            "label": {"en": "Image alignment"},
            "default": "left",
            "options": [
              {
                "value": "left",
                "label": {"en": "Left"}
              },
              {
                "value": "right",
                "label": {"en": "Right"}
              },
              {
                "value": "fullwidth",
                "label": {
                  "en": "Full Width",
                  "es": "Todo el Largor"
                }
              }
            ]
          },
          {
            "type": "text",
            "id": "title",
            "label": {"en": "Heading"},
            "default": {"en": "Image with text"}
          },
          {
            "type": "richtext",
            "id": "text",
            "label": {"en": "Text"},
            "default": {"en": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"}
          },
          {
            "type": "text",
            "id": "button_label",
            "label": {"en": "Button label"}
          },
          {
            "type": "url",
            "id": "button_link",
            "label": {"en": "Button link"}
          },
          {
            "type": "range",
            "id": "margin_top",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Margin Top",
            "default": 50
          },
          {
            "type": "range",
            "id": "margin_bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Margin Bottom",
            "default": 50
          }
        ]
      },
      {
        "type": "hero",
        "name": "Static Hero",
        "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Image alignment",
          "default": "center",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "center",
              "label": "Middle"
            },
            {
              "value": "bottom",
              "label": "Bottom"
            }
          ]
        },
        {
          "type": "select",
          "id": "hero_layout",
          "label": "Layout",
          "default": "full_width",
          "options": [
            {
              "label": "Full width",
              "value": "full_width"
            },
            {
              "label": "Fixed width",
              "value": "fixed_width"
            }
          ]
        },
        {
          "type": "select",
          "id": "hero_size",
          "label": "Section height",
          "default": "medium",
          "options": [
            {
              "label": "Adaptar a la imagen",
              "value": "adapt"
            },
            {
              "label": "Extra Small",
              "value": "x-small"
            },
            {
              "label": "Small",
              "value": "small"
            },
            {
              "label": "Medium",
              "value": "medium"
            },
            {
              "label": "Large",
              "value": "large"
            },
            {
              "label": "Extra Large",
              "value": "x-large"
            }
          ]
        },
        {
          "type": "select",
          "id": "text_size",
          "label": "Text size",
          "default": "medium",
          "options": [
            {
              "label": "Medium",
              "value": "medium"
            },
            {
              "label": "Large",
              "value": "large"
            }
          ]
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Image with text overlay"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Use overlay text to give your customers insight into your brand. Select imagery and text that relates to your style and story.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
        ]
      },
      {
        "type": "text_block",
        "name": "Text Block",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Your text here</p>"
          },
          {
            "type": "color",
            "id": "color-title",
            "label": "Title color",
            "default": "#000000"
          },
          {
            "type": "select",
            "id": "text-align",
            "label": "Text Align",
            "default": "left",
            "options": 
            [
              {"value": "left","label": "Left"},
              {"value": "center","label": "Center"},
              {"value": "right","label": "Right"}
            ]
          },
          {
            "type": "range",
            "id": "margin-top",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Margin Top",
            "default": 50
          },
          {
            "type": "range",
            "id": "margin-bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Margin Bottom",
            "default": 50
          }
        ]
      },
      {
        "type": "image_with_text",
        "name": "Image with text",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": {"en": "Image"}
          },
          {
            "type": "select",
            "id": "layout",
            "label": {"en": "Image alignment"},
            "default": "left",
            "options": [
              {
                "value": "left",
                "label": {"en": "Left"}
              },
              {
                "value": "right",
                "label": {"en": "Right"}
              }
            ]
          },
          {
            "type": "text",
            "id": "title",
            "label": {"en": "Heading"},
            "default": {"en": "Image with text"}
          },
          {
            "type": "richtext",
            "id": "text",
            "label": {"en": "Text"},
            "default": {"en": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"}
          },
          {
            "type": "text",
            "id": "button_label",
            "label": {"en": "Button label"}
          },
          {
            "type": "url",
            "id": "button_link",
            "label": {"en": "Button link"}
          },
          {
            "type": "range",
            "id": "margin_top",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Margin Top",
            "default": 50
          },
          {
            "type": "range",
            "id": "margin_bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Margin Bottom",
            "default": 50
          }
        ]
      },
      {
        "type": "video",
        "name": "Video",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": {"en": "Heading"},
            "default": {"en": "Video"}
          },
          {
            "type": "video_url",
            "id": "video_url",
            "label": {"en": "Video link"},
            "accept": [
              "youtube",
              "vimeo"
            ]
          }
        ]
      },
    ]
  }
{% endschema %}


{% for block in section.blocks %}

  {% case block.type %}

    {% when 'video' %}
    {% include 'video' %}

    {% when 'hero' %}
    {% include 'hero' %}

    {% when 'text_block' %}
    {% include 'text-block' %}

    {% when 'image_with_text' %}
    {% include 'image-with-text' %}
    
    {% when 'image_link_with_text' %}
    {% include 'image-link-with-text' %}

    {% when 'slideshow_snippet' %}
    {% include 'slideshow-snippet' %}

  {% endcase %}

{% endfor %}